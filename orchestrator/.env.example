# QUALIAâ€¢NSS Orchestrator System - Environment Configuration Template
# Copy this file to .env and customize for your environment

# Environment
NODE_ENV=development

# Core Directories
ORCHESTRATOR_STATE_DIR=./project-states
ORCHESTRATOR_TEMPLATE_DIR=./templates
ORCHESTRATOR_SCHEMA_DIR=./schemas
ORCHESTRATOR_BACKUP_DIR=./backups
ORCHESTRATOR_LOG_DIR=./logs

# Performance Settings
ORCHESTRATOR_MAX_CONCURRENT=100
ORCHESTRATOR_OPERATION_TIMEOUT=30000
ORCHESTRATOR_MEMORY_LIMIT=512

# Storage Settings
ORCHESTRATOR_BACKUP_RETENTION_DAYS=30
ORCHESTRATOR_ENABLE_COMPRESSION=true
ORCHESTRATOR_AUTO_BACKUP=true

# Validation Settings
ORCHESTRATOR_ENABLE_SCHEMA_VALIDATION=true
ORCHESTRATOR_STRICT_MODE=true
ORCHESTRATOR_VALIDATE_TEMPLATES=true

# Logging Configuration
ORCHESTRATOR_LOG_LEVEL=info
ORCHESTRATOR_ENABLE_AUDIT=true
ORCHESTRATOR_MAX_LOG_SIZE=10485760
ORCHESTRATOR_MAX_LOG_FILES=5

# Security Settings
ORCHESTRATOR_SANITIZE_INPUT=true
ORCHESTRATOR_ENABLE_CORS=false
ORCHESTRATOR_MAX_REQUEST_SIZE=1048576

# Development Settings (development only)
ORCHESTRATOR_DEBUG=false
ORCHESTRATOR_VERBOSE_LOGGING=false
ORCHESTRATOR_ENABLE_PROFILING=false

# Production Settings (production only)
# Uncomment and configure for production deployment
# ORCHESTRATOR_STATE_DIR=/production/orchestrator/data/states
# ORCHESTRATOR_BACKUP_DIR=/production/orchestrator/data/backups
# ORCHESTRATOR_LOG_DIR=/production/orchestrator/data/logs
# ORCHESTRATOR_LOG_LEVEL=info
# NODE_ENV=production